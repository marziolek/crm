<%= form_for @user do |f| %>
  <!-- kod wyświetlający błędy -->
  <p>
  <%= f.label :login %> <br />
  <%= f.text_field :login %>
  </p>
  <p>
  <%= f.label :email %> <br />
  <%= f.text_field :email %>
  </p>
  <p>
  <%= f.label "Hasło" %> <br />
  <%= f.password_field :password %>
  </p>
  <p>
  <%= f.label "Potwierdź hasło" %> <br />
  <%= f.password_field :password_confirmation %>
  </p>
  <p><%= f.submit "Stwórz użytkownika" %> </p>
<% end %>
