<%= debug(@user) %>
<%= form_for @user do |f| %>
  <!-- trzeba zedytować, żeby nie pozwalał na zmianę loginu -->
  <!-- kod wyświetlający błędy -->
  <p>
  <%= f.label :login %> <br />
  <%= f.text_field :login %>
  </p>
  <p>
  <%= f.label :email %> <br />
  <%= f.text_field :email %>
  </p>
  <p>
  <%= f.label :password %> <br />
  <%= f.password_field :password %>
  </p>
  <p>
  <%= f.label :password_confirmation %> <br />
  <%= f.password_field :password_confirmation %>
  </p>
  <p>
  <%= f.label :admin %> <br />
  <%= f.check_box :admin%>
  </p>
  <p>
  <%= f.label :client_id %> <br />
  <%= f.collection_select(:client_id, Client.all, :id, :display_name, {:prompt => true}) %>
  </p>
  <p><%= f.submit "Submit" %> </p>
<% end %>
